<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SurfaceView

        android:id="@+id/camerapreview2"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/skanuj"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="35dp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/nadrzedny_opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nazwa"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="238dp"
        android:text="Opakowanie" />

    <EditText
        android:id="@+id/kod"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camerapreview2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="198dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Kod produktu" />

    <TextView
        android:id="@+id/kod_opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camerapreview2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="223dp"
        android:text="Kod" />

    <EditText
        android:id="@+id/nazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="121dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nazwa produktu" />

    <TextView
        android:id="@+id/nazwa_opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="236dp"
        android:text="Nazwa
" />

    <EditText
        android:id="@+id/nadrzedny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nazwa"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="123dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tytul"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="Dodawanie produktu"
        android:textSize="30dp" />


    <Button
        android:id="@+id/dodaj"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camerapreview2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="237dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="22dp"
        android:text="Dodaj" />

    <Button
        android:id="@+id/skanuj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nadrzedny"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="151dp"
        android:text="Skanuj kod produktu" />
</RelativeLayout>